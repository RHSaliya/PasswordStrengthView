<resources>
    <declare-styleable name="PasswordStrengthView">
        <attr name="very_strong_color" format="color" />
        <attr name="strong_color" format="color" />
        <attr name="medium_color" format="color" />
        <attr name="ok_color" format="color" />
        <attr name="weak_color" format="color" />
        <attr name="background_color" format="color" />
        <!--<attr name="scores" format="enum">
            <enum name="10-20-30-40" value="10-20-30-40" />
        </attr>-->
        <attr name="scores" format="string"/>
        <attr name="status" format="enum">
            <enum name="empty" value="0" />
            <enum name="weak" value="1" />
            <enum name="ok" value="2" />
            <enum name="medium" value="3" />
            <enum name="strong" value="4" />
            <enum name="very_strong" value="5" />
        </attr>
        <attr name="type" format="enum">
            <enum name="discrete" value="0" />
            <enum name="continuous" value="1" />
        </attr>
        <attr name="manual_mode" format="boolean" />
        <attr name="fixBackgroundColor" format="boolean" />
        <attr name="indicatorHeight" format="dimension" />
        <attr name="indicatorRadius" format="dimension" />
        <attr name="indicatorWidth" format="dimension" />
        <attr name="space_between" format="dimension" />
    </declare-styleable>
</resources>